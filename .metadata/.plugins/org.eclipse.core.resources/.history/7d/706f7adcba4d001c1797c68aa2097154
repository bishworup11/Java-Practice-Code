package threadDemo3Lambda;

class hi implements Runnable {
	@Override
	public void run() {
		for (int i = 0; i < 5; i++) {
			System.out.println("hi");
			try {
				Thread.sleep(500);
			} catch (Exception e) {
			}

		}
	}

}

class hello implements Runnable {
	@Override
	public void run() {
		for (int i = 0; i < 5; i++) {
			System.out.println("hello");
			try {
				Thread.sleep(500);
			} catch (Exception e) {
			}

		}
	}

}

public class ThreadDemo3 {
	public static void main(String[] args) {
		Runnable ob1 = new Runnable() {

			@Override
			public void run() {
				for (int i = 0; i < 5; i++) {
					System.out.println("hi");
					try {
						Thread.sleep(500);
					} catch (Exception e) {
					}

				}

			}
		};

		Runnable ob2 = new Runnable() {

			@Override
			public void run() {
				for (int i = 0; i < 5; i++) {
					System.out.println("hello");
					try {
						Thread.sleep(500);
					} catch (Exception e) {
					}

				}
			}
		};

	}

}
